<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Estilos de Botones -->
    <style name="botones">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#330099</item>/>
        <item name="android:padding">13dp</item>/>
        <item name="android:textSize">15dp</item>/>
        <item name="android:inputType">textCapCharacters</item>/>
    </style>
    <!-- Estilos de Botones del menú superior -->
    <style name="botones_superior">
        <item name="android:layout_width">78dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#873593</item>/>
        <item name="android:padding">5dp</item>/>
        <item name="android:textSize">15dp</item>/>
        <item name="android:inputType">textCapCharacters</item>/>
    </style>

    <!-- Estilos de salir -->
    <style name="estilo_salir">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ce1616</item>/>
        <item name="android:textSize">15dp</item>/>
        <item name="android:inputType">textCapCharacters</item>/>
        <item name="android:textStyle">bold</item>/>
    </style>

    <!-- Estilos de títulos -->
    <style name="titulos">
        <item name="android:textColor">#0066CC</item>/>
        <item name="android:textSize">22sp</item>/>
        <item name="android:textStyle">bold</item>/>
        <item name="android:inputType">textCapCharacters</item>/>
    </style>
    <!-- Estilos de texto -->
    <style name="texto">
        <item name="android:textColor">#0066CC</item>/>
        <item name="android:textSize">18sp</item>/>
        <item name="android:inputType">textCapCharacters</item>/>
    </style>
    <!-- Estilos de texto txt -->
    <style name="textotxt">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#330099</item>/>
        <item name="android:padding">5dp</item>/>
        <item name="android:textSize">16dp</item>/>
        <item name="android:background">#CCFFFF</item>/>
        <item name="android:layout_marginTop">8dp</item>/>
        <item name="android:layout_marginBottom">8dp</item>/>
        <item name="android:inputType">textCapCharacters</item>/>
    </style>

</resources>
