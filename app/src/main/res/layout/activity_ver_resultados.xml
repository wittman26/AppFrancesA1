<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ver_resultados"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.laudy.francesa1.app.appfrancesa1.VerResultados"
    android:background="@drawable/centro">

        <Button
            android:id="@+id/btnVerDossiersResu"
            android:text="@string/btnVerDossiers"
            style="@style/botones"
            android:layout_margin="2dp"
            android:textAlignment="center"
            android:maxLines="2" />

        <Button
            android:id="@+id/btnVerActAprendResu"
            android:text="@string/btnVerActAprend"
            style="@style/botones"
            android:layout_margin="2dp"
            android:textAlignment="center"
            android:maxLines="2" />

        <TextView
            android:id="@+id/lblResultados"
            android:text=" "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="17sp"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp" />

        <RatingBar
            android:id="@+id/rabResultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:numStars="6"
            android:progressTint="@color/colorRating"
            android:isIndicator="true" />
        <!--android:transformPivotX="0dp"-->
        <TextView
            android:id="@+id/lblPuntajeTotal"
            android:text="Puntaje"
            style="@style/texto"
            android:textSize="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#129b2b"
            android:layout_margin="8dp"
            />
        <TextView
            android:id="@+id/lblMotiva"
            android:text="motivacion"
            style="@style/texto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_margin="8dp"
            />
</LinearLayout>
